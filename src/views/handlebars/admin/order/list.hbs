<main>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row">
                <div class="container d-flex justify-content-end">
                    Orders
                </div>
                <div class="container d-flex">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Status</th>
                                <th scope="col">Items</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                                <tr>
                                    <th scope="row">{{@index}}</th>
                                    <td>{{this.attributes.status}}</td>
                                    <td>
                                        {{#each this.attributes.items}}
                                            {{this.name}} - {{this.quantity}}{{#unless @last}}, {{/unless}} 
                                        {{/each}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">
                                    <div class="container d-flex justify-content-end">
                                        Total: {{orders.length}}
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>

</main>
