<main>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row">
                <div class="container d-flex justify-content-end">
                    <a href="/admin/products/create" class="btn btn-primary">Create</a>
                </div>
                <div class="container d-flex">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr>
                                    <th scope="row">{{@index}}</th>
                                    <td>{{this.attributes.name}}</td>
                                    <td><a href="/admin/products/{{this.id}}/update" class="btn btn-primary">Edit</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">
                                    <div class="container d-flex justify-content-end">
                                        Total: {{products.length}}
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>

</main>
